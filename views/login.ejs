<% layout('../layouts/boilerplate.ejs') %>
<div class = "column is-three-fifths is-offset-one-fifth">
    <h1 class="title is-2 has-text-centered">Login</h1>
    <form action="/login" method = 'POST'>
        <div class="field">
            <label class="label">Username</label>
            <div class="control">
                <input class="input is-primary" type="text" placeholder="Username" name = "username" id = "username">
            </div>
          </div>
        <div class="field">
            <label class="label">Password</label>
            <div class="control">
                <input class="input is-danger" type="password" placeholder="password" name = "password" id = "password">
            </div>
        </div>
        <div class="control">
            <button class="button is-primary">Login</button>
          </div>
    </form>
</div>
